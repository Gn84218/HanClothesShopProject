@model IEnumerable<HanClothesShopProject.Models.GetCoupon>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}


<h1>優惠券管理</h1>


<form action="" method="get" >
    優惠券名稱: <input type="text" name="keyword" value="@ViewBag.keyword" class="form-control" style="width:250px; display:inline-block;" />
    優惠券狀態: <select  name="state" value="@ViewBag.state" class="form-control" style="width:250px; display:inline-block;" />
    <option value="-1">全部</option>
    <option value="0">未使用</option>
    <option value="1">已使用</option>
    </select>
    <input type="submit" class="btn btn-success" value="查詢 " />
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                優惠券名稱
            </th>
            <th>
                優惠券折價金額
            </th>
            <th>
                優惠券類型
            </th>          
            <th>
                優惠券開始時間
            </th>
            <th>
                優惠券結束時間
            </th>            
            <th>
                優惠券使用門檻
            </th>
            <th>
                優惠券狀態
            </th>
            <th>
                領取時間
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Coupon.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Coupon.DiscountAmount)
                </td>
                <td>
                    @if (item.Coupon.DiscountType.Contains("滿減券"))
                    {
                        <b class="btn btn-info">滿減券</b>
                    }
                    else
                    {
                        <b class="btn btn-warning">折價券</b>
                    }
                </td>              
                <td>
                    @Html.DisplayFor(modelItem => item.Coupon.StartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Coupon.EndDate)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Coupon.ShouldMoney)元
                </td>   
                <td>
                    @if (item.Coupon.EndDate <DateTime.Now)
                    {
                        <b class="btn btn-danger">已過期</b>
                    }
                    else
                    {
                        if (item.IsUse == 1)
                        {
                            <b class="btn btn-danger">已使用</b>
                        }
                        else
                        {
                            <b class="btn btn-success">未使用</b>
                        }                       
                    }
                </td>
                <td>
                    @item.Createtime)
                </td>
        </tr>
}
    </tbody>
</table>
@if (Model.Count() == 0)
{
    <h1 align="center">沒有找到數據</h1>
}

<ul class="pagination" style="display:flex; justify-content:center;">
    @if (ViewBag.pageNum == null || ViewBag.pageNum == 0)
    {
        <li><a herf="?page=1">1</a></li>
    }
    else
    {
        @for (var i = 1; i <= ViewBag.pageNum; i++)
        {
            <li><a herf="?page=1&keyword=@(ViewBag.keyword)&state=@(ViewBag.state)">@i</a></li>
        }
    }
</ul>
