@model HanClothesShopProject.Models.User

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_BackLayout.cshtml";
}

<h1>詳細</h1>

<div>
    <h4>用戶</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            照片:
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.Img" width="100" height="100" />
        </dd>
        <dt class = "col-sm-2">
          手機號:
        </dt>
        <dd class = "col-sm-10">
          @Html.DisplayFor(model => model.Phone)
        </dd>
        <dt class = "col-sm-2">
           密碼:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Pwd)
        </dd>
        <dt class = "col-sm-2">
           名稱:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nickname)
        </dd>
        <dt class = "col-sm-2">
            性別:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Sex)
        </dd>
        <dt class = "col-sm-2">
            自我介紹:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Introduce)
        </dd>
        <dt class = "col-sm-2">
            年紀:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Age)
        </dd>     
        <dt class = "col-sm-2">
            密碼提示:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Mibao)
        </dd>
        <dt class = "col-sm-2">
            權限:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Role)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">更改</a> |
    <a asp-action="Index">返回</a>
</div>
